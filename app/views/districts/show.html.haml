.row
  .col-sm-12
    %ol.breadcrumb
      %li.breadcrumb-item
        = link_to 'Start', root_path
      %li.breadcrumb-item.active
        = link_to @district.state.name, state_path(@district.state)
      %li.breadcrumb-item
        Wahlkreis
        = @district.district_identifier
.row
  .col-sm-12
    .heading
      = link_to 'Wahlbezirke', district_path(@district), class: 'switcher activeSwitcher'
      = link_to 'Gemeinden', district_path(@district, gemeinde: '1'), class: 'switcher passiveSwitcher'
      im Wahlkreis
      = @district.district_identifier
      = @district.name

.row
  .col-sm-12
    %table.table.table-hover.table-striped.tablesorter
      %thead
        %tr
          %th.title(data-sort="string")
            %span
            Gemeinde
          %th.data.number(data-sort="string")
            %span
            Wahlbezirk
          %th.data.number(data-sort="float")
            %span
            Score (WK)
          %th.data.number(data-sort="int")
            %span
            Rang (WK)
          %th.data.number(data-sort="int")
            %span
            Rang (Gemeinde)
          %th.filler
      %tbody
      - @precincts.each do |p|
        %tr
          %td
            = link_to p.municipality.name, municipality_path(p.municipality.municipality_identifier)
          %td.data.number
            = p.precinct_identifier
          %td.data.number
            = display_score p.district_score
          %td.data.number
            = p.district_rank
          %td.data.number
            = p.municipality_rank
          %td.filler

<% if user_signed_in? %>
  <div class='container indicatorRow'>
    <div class='row'>
      <div class='col-sm-12'>
        <%= render 'layouts/indicator' %>
      </div>
    </div>
  </div>
<% end %>

<% flash.each do |key, value| %>
  <div class='container <%= "fb-#{key}" %>' id="flashBox">
    <div class="row">
      <div class="col-sm-12">
        <div class='message'>
          <%= value %>
          <span class='pointer'><%= fa_icon 'times-circle' %></span>
        </div>
      </div>
    </div>
  </div>
<% end %>

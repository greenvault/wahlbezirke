.row
  .col-sm-12
    %ol.breadcrumb
      %li.breadcrumb-item
        = link_to 'Start', root_path
      %li.breadcrumb-item
        = link_to @municipality.state.name, state_path(@municipality.state)
      %li.breadcrumb-item.active
        = link_to "Wahlkreis #{@municipality.district_identifier}", district_path(@municipality.district)
      %li.breadcrumb-item
        Gemeinde
        = @municipality.name
.row
  .col-sm-12
    %h3
      Wahlbezirke in
      = @municipality.name
      = " (#{@municipality.municipality_identifier})"
.row
  .col-sm-12
    %table.table.table-hover.table-striped.tablesorter
      %thead
        %tr
          %th(data-sort="string") Wahlbezirk
          %th(data-sort="float") Targeting-Score im Wahlkreis
          %th(data-sort="int") Targeting-Rang im Wahlkreis
          %th(data-sort="int") Targeting-Rang in Gemeinde
      %tbody
      - @precincts.each do |p|
        %tr
          %td
            = p.precinct_identifier
          %td
            = p.district_score
          %td
            = p.district_rank
          %td
            = p.municipality_rank
